{
  "name": "@arc/core",
  "version": "0.0.0",
  "description": "Javascript Game Engine",
  "scripts": {
    "build": "npm run transpile && npm run compile",
    "build:ci": "npm run build:clean && npm run transpile && npm run compile",
    "build:clean": "npm run transpile:clean && npm run compile:clean",
    "build:watch": "npm run build && concurrently \"npm run transpile:watch\" \"npm run compile:watch\"",
    "ci": "npm run build:ci && npm run docs:ci",
    "clean": "npm run build:clean && npm run docs:clean",
    "compile": "rollup -c ./rollup.config.js",
    "compile:clean": "rimraf ./build",
    "compile:watch": "rollup -c ./rollup.config.js -w",
    "compress": "uglifyjs -c -o ./build/build.min.js ./build/build.js",
    "docs": "npm run docs:clean && npm run docs:api",
    "docs:api": "typedoc",
    "docs:clean": "rimraf ./docs/api",
    "test": "jest",
    "transpile": "tsc",
    "transpile:clean": "rimraf ./dist",
    "transpile:watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/AlboeDev/arc-core.git"
  },
  "author": "Alboe Development",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlboeDev/arc-core/issues"
  },
  "homepage": "https://github.com/AlboeDev/arc-core#readme",
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsdoc": "^30.7.8",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3",
    "rollup-plugin-terser": "^7.0.2",
    "typedoc": "^0.19.2",
    "typedoc-plugin-markdown": "^3.0.11",
    "typescript": "^4.0.5"
  },
  "dependencies": {}
}
